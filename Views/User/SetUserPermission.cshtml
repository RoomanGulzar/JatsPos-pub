@model POS.Models.UserVM

<div class="panel panel-default">
    <div class="panel-heading">
        @POS.Resources.Resource.SetUserPermissions
    </div>
    <div class="panel-body">
        <div class="form-row">
            <div class="form-lable">
                @POS.Resources.Resource.User
            </div>
            <div class="form-input">
                @Html.DropDownList("user", Model.getAllUsers(), "Please Select....", new { @class = "form-control selectize", @id = "user" })
            </div>
        </div>
        <div style="clear:both;">

        </div>
        <div id="prem-result"></div>
        </div>
    </div>
        <script type="text/javascript" charset="utf-8">
            $(document).ready(function () {

                $('#user').change(function () {

                    getPermissions($('#user').val());
                });
            });
            function getPermissions(id) {
                blockUI();
                $.ajax({
                    type: "GET",
                    contentType: "html",
                    url: '/User/UserPermission?id='+id,
                    async: true,
                    success: function (data) {

                        $("#prem-result").html("");
                        $("#prem-result").html(data);
                        unblockUI();
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        handleErrors(textStatus);
                    }
                });
            }

        </script>
