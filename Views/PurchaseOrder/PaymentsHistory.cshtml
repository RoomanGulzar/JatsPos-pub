@model List<DataAccessLayer.ReportModels.PaymentHistory>



<div class="panel panel-default">
    <div class="panel-heading">
        @POS.Resources.Resource.PaymentsHistory 
    </div>
    <div class="panel-body">
        <a href="/Home" class="btn btn-primary custombtn">@POS.Resources.Resource.Back</a>
        <div class="tab-div PO-tab-div">
            <table class="display" id="PayHistory">
                <thead>
                    <tr>
                        <th>
                            @POS.Resources.Resource.PurchaseOrderNumber 
                        </th>
                        <th>
                            @POS.Resources.Resource.PurchaseOrderDate 
                        </th>
                        <th>
                            @POS.Resources.Resource.Supplier
                        </th>
                        <th>
                            @POS.Resources.Resource.RequiredbyDate 
                        </th>
                        <th>
                            @POS.Resources.Resource.Paid Date
                        </th>
                        <th>
                            @POS.Resources.Resource.Paid
                        </th>
                        <th>
                            @POS.Resources.Resource.Received By
                        </th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {

                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.RefNo)</td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.CDate2)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>@Html.DisplayFor(modelitem => item.CDate) </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Amount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                            </tr>
                     
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
<script>
    $(document).ready(function () {

        $('#PayHistory').dataTable({
            responsive: true
        });
    });
</script>